<h1>バイク一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">バイク名</th>
      <th scope="col">排気量</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @motorcycles.each.with_index(1) do |moto,i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= moto.name %></td>
        <td><%= moto.displacement%></td>
        <td>
          <%= link_to "詳細", motorcycle_path(moto) %>
          <%= link_to "編集", edit_motorcycle_path(moto)%>
          <%= link_to "削除", motorcycle_path(moto), method: :delete , data: { confirm: "削除しますか?" }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>