<h1 class="text-center">バイク一覧</h1>
<table class="table table-bordered table-striped mt-4">
  <thead class="table-primary">
    <tr>
      <th scope="col">No.</th>
      <th scope="col" class="w-50">バイク名</th>
      <th scope="col" class="w-50">排気量</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @motorcycles.each.with_index(1) do |moto,i| %>
      <tr>
        <th scope="row" class="text-right"><%= i %></th>
        <td class="break-word"><%= moto.name %></td>
        <td class="break-word"><%= moto.displacement%></td>
        <td class="text-nowrap">
           <%= link_to motorcycle_path(moto), class: "btn btn-primary" do %>
            <i class="fas fa-envelope-open-text"></i><span class="d-none d-md-inline"> 詳細</span>
          <% end %>
          <%= link_to  edit_motorcycle_path(moto), class: "btn btn-success" do %>
            <i class="far fa-edit"></i><span class="d-none d-md-inline"> 編集</span>
          <% end %>
          <%= link_to motorcycle_path(moto),method: :delete , data: { confirm: "削除しますか?" }, class: "btn btn-danger" do %>
            <i class="fas fa-trash-alt"></i><span class="d-none d-md-inline"> 削除</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>