<%= render "layouts/error_massages"%>
<%=  form_with model: @motorcycle, local: true do |form|%>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :displacement %>
    <%= form.text_field :displacement, class: "form-control"%>
    cc
  </div>
  <div class="form-group">
    <%= form.label :car_type %>
    <%= form.select :car_type, Motorcycle::CAR_TYPE_LIST, class: "form-control"%>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, cols: 40, rows: 10, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.submit button_value %>

  </div>
<% end %>