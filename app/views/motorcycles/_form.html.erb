<%= render "layouts/error_massages"%>
<%=  form_with model: @motorcycle, local: true do |form|%>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :displacement %>
    <%= form.text_field :displacement, class: "form-control"%>
    cc
  </div>
  <div class="form-group">
    <%= form.label :car_type %>
    <%= form.select :car_type, Motorcycle::CAR_TYPE_LIST, class: "form-control form-control-lg"%>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, cols: 40, rows: 10, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.submit button_value, class: "btn btn-success btn-block" %>

  </div>
<% end %>